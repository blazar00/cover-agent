{
    "name": "example/php-slim-app",
    "description": "An example PHP Slim application with PHPUnit and code coverage.",
    "require": {
        "slim/slim": "^4.8",
        "slim/psr7": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --coverage-text --coverage-clover=coverage.xml"
    }
}